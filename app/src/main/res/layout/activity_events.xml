<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context=".ActivityEvents">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F28A2DAC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/material_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu"
        app:title="E-SUMMIT 2024"
        app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        app:titleTextColor="@color/white">

    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stars" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="431dp"
        android:layout_height="325dp"
        android:layout_marginTop="396dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stars" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="343dp"
        android:layout_height="176dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/location"
        android:layout_width="265dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="@string/location"
        android:textAppearance="@style/location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="152dp"
        android:src="@drawable/map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/birla_insti"
        android:layout_width="242dp"
        android:layout_height="20dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="152dp"
        android:gravity="top"
        android:lineSpacingExtra="-1sp"
        android:text="@string/birla_insti"
        android:textAppearance="@style/birla_insti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/events_spea"
        android:layout_width="404dp"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172dp"
        android:gravity="center_horizontal|top"
        android:text="@string/events_spea"
        android:textAppearance="@style/events_spea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="391dp"
        android:layout_height="355dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/events_spea">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="252dp"
                android:layout_height="229dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ancient_entropreneur"
                app:layout_constraintStart_toEndOf="@+id/event_1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/event_1"
                android:layout_width="252dp"
                android:layout_height="229dp"
                android:src="@drawable/b_plan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="252dp"
                android:layout_height="229dp"
                android:layout_marginStart="27dp"
                android:src="@drawable/pitching"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="252dp"
                android:layout_height="229dp"
                android:layout_marginStart="22dp"
                android:src="@drawable/stock"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="252dp"
                android:layout_height="229dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ipl"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="252dp"
                android:layout_height="229dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/valorant"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="252dp"
                android:layout_height="229dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/quiz"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="252dp"
                android:layout_height="229dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/hack_thon"
                app:layout_constraintStart_toEndOf="@+id/imageView12"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="229dp"
                android:layout_height="117dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/background_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_1" >

                <Button
                    android:id="@+id/b_plan_info"
                    android:layout_width="151dp"
                    android:layout_height="49dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="52dp"
                    android:text="Know More"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="229dp"
                android:layout_height="117dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/background_1"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="248dp"
                android:layout_height="119dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/background_1"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="250dp"
                android:layout_height="142dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/background_1"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:layout_width="256dp"
                android:layout_height="139dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/background_1"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout4"
                app:layout_constraintTop_toBottomOf="@+id/imageView10">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout6"
                android:layout_width="250dp"
                android:layout_height="142dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_1"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout5"
                app:layout_constraintTop_toBottomOf="@+id/imageView11">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout7"
                android:layout_width="250dp"
                android:layout_height="142dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/background_1"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout6"
                app:layout_constraintTop_toBottomOf="@+id/imageView12">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="281dp"
                android:layout_height="124dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/background_1"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout7"
                app:layout_constraintTop_toBottomOf="@+id/imageView13" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/entrepreneu"
        android:layout_width="374dp"
        android:layout_height="94dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal|top"
        android:text="@string/entrepreneu"
        android:textAppearance="@style/entrepreneu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birla_insti" />

</androidx.constraintlayout.widget.ConstraintLayout>